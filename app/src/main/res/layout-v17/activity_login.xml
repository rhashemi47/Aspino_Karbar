<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".Login"
    android:orientation="vertical"
    android:layoutDirection="rtl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LinerLogo">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/logo"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="به اپلیکیشن آسپینو خوش آمدید"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="برای ادامه لطفا شماره تلفن خود را وارد نمایید"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#fff"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layoutDirection="rtl"
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:ems="2"
                    android:padding="10dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20sp"
                    android:inputType="phone"
                    android:textStyle="normal"
                    android:hint="09"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp" />
                <Button
                    android:id="@+id/btnEnter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@+id/etPhoneNumber"
                    android:layout_alignBottom="@+id/etPhoneNumber"
                    android:layout_alignRight="@+id/etPhoneNumber"
                    android:background="@drawable/signin"
                    android:layout_margin="5dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>