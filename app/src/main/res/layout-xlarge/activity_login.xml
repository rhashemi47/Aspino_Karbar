<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layoutDirection="rtl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LinerLogo">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/logo"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="به اپلیکیشن آسپینو خوش آمدید"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="38sp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="برای ادامه لطفا شماره تلفن خود را وارد نمایید"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="38sp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layoutDirection="ltr"
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:ems="2"
                    android:padding="25dp"
                    android:layout_marginTop="40dp"
                    android:textSize="38sp"
                    android:inputType="phone"
                    android:textStyle="normal"
                    android:text="09"
                    android:layout_marginLeft="250dp"
                    android:layout_marginRight="250dp" />
                <Button
                    android:id="@+id/btnEnter"
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:layout_alignTop="@+id/etPhoneNumber"
                    android:layout_alignBottom="@+id/etPhoneNumber"
                    android:layout_alignRight="@+id/etPhoneNumber"
                    android:background="@drawable/signin"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>