<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:titleTextColor="#ffff"
        android:background="@drawable/rounded_top_activity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:id="@+id/tvTextCanselQuastion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="@string/Cansel_Service"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:textSize="30sp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_activity"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTextCansel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="مشتری گرامی
امیدواریم در سفارشات بعدی رضایت شما را جلب نماییم . لطفا دلیل لغو این سفارش را به ما بگویید تا بتوانیم با تلاش کیفیت خدمات خود را بهبود بخشیم . از اینکه در کنار ما هستید و ما را یاری می نمایید سپاس گذاریم ."
                android:textSize="38sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="سفارشم آزمایشی بود"
                android:textColor="#fff"
                android:textSize="38sp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnTestService"
                android:background="@drawable/rounded_button_add_address"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="برنامه زمانی ام تغییر کرد"
                android:textColor="#fff"
                android:textSize="38sp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnChangeTimeService"
                android:background="@drawable/rounded_button_add_address"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="قیمت مناسب تری پیدا کردم"
                android:textColor="#fff"
                android:textSize="38sp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnFindBestPrice"
                android:background="@drawable/rounded_button_add_address"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="متخصص زمان خدمت را تغییر داد"
                android:textColor="#fff"
                android:textSize="38sp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnChangeTimeByHamyar"
                android:background="@drawable/rounded_button_add_address"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="متخصص به قیمت پایبند نبود"
                android:textColor="#fff"
                android:textSize="38sp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnHamyarDoNotAdherePrice"
                android:background="@drawable/rounded_button_add_address"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="متخصص رفتار مناسبی نداشت"
                android:textColor="#fff"
                android:textSize="38sp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnHamyarDonotGoodBehavior"
                android:background="@drawable/rounded_button_add_address"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="به درخواست متخصص لغو کردم"
                android:textColor="#fff"
                android:textSize="38sp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnCanselByQrderHamyar"
                android:background="@drawable/rounded_button_add_address"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="دلیل دیگری دارید"
                android:textColor="#fff"
                android:textSize="38sp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnOtherCase"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button_add_address"/>
        </LinearLayout>
</LinearLayout>
