<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/LinearAddress"
    android:background="@color/mdtp_transparent"
    android:layoutDirection="rtl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_top_select_address">
        <TextView
            android:id="@+id/txtTitleAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textDirection="rtl"
            android:drawableLeft="@drawable/left_arrwo_larg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_bottom_select_address"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imgIcon"
            android:src="@drawable/address"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/txtContentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:text="@string/Save"
            android:textSize="24sp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
