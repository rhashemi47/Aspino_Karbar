                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/rounded_edittext"
                            android:textSize="10sp"
                            android:drawableLeft="@drawable/down_arrwo"
                            android:paddingLeft="5dp"
                            android:hint="@string/DoSelect"
                            android:textColorHint="#000"
                            android:textDirection="rtl"
                            android:textColor="#000000"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_layout_select_job_body"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/GenderExpert"
                        android:layout_gravity="right"
                        android:textSize="10sp"
                        android:layout_marginRight="20dp"
                        android:textColor="#000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:id="@+id/LinearGenderExpert">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1">
                            <CheckBox
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:id="@+id/chbMale"
                                android:checked="true"
                                android:layout_gravity="center"
                                android:button="@drawable/selector_checkbox"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Male"
                                android:textColor="#000000"
                                android:textSize="10sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1">
                            <CheckBox
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:id="@+id/chbFemale"
                                android:layout_gravity="center"
                                android:button="@drawable/selector_checkbox"
                                android:textSize="6sp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Female"
                                android:textColor="#000000"
                                android:textSize="10sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <CheckBox
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:id="@+id/chbMaleAndFemale"
                                android:layout_gravity="center"
                                android:button="@drawable/selector_checkbox"
                                android:textSize="6sp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Doesnotmatter"
                                android:textColor="#000000"
                                android:textSize="10sp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
