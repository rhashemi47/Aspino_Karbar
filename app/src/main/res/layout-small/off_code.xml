<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    android:layoutDirection="rtl"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTextAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingExtra="4dp"
            android:text="آیا کد تخفیف دارید ؟"
            android:textSize="10sp"
            android:textColor="#333333"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/offlogo"
            android:layout_gravity="center"
            android:foregroundGravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etOffCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_edittext_with_border"
                android:ems="2"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="10dp"
                android:textSize="10sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnSetOffCode"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/etOffCode"
                android:layout_alignRight="@+id/etOffCode"
                android:layout_alignTop="@+id/etOffCode"
                android:textSize="10sp"
                android:background="@drawable/rounded_button_violet"
                android:text="اعمال"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            android:text="برای اطلاع از کد های تخفیف ، آسپینو رو در شبکه های اجتماعی دنبال کنید"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imgForward"
            android:layout_gravity="center"
            android:background="@drawable/forward"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imgBack"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:background="@drawable/back_deactive"/>
    </LinearLayout>
</LinearLayout>
