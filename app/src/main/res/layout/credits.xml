<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:layoutDirection="rtl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/LinearMinCredit"
        android:layout_below="@+id/appbar"
        android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/LinearImages">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/pose"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6a33d7"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/TopValueCredits"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvRecentCredits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RecentCredit"
            android:layout_marginRight="10dp"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvContentCredits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#fff"
            android:text="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/vazir"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#fff"
            android:text="@string/Toman"
            android:layout_weight="1"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TopValueCreditsIncrise">
            <TextView
                android:id="@+id/tvTitleIncriseCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="لطفا یکی از مبالغ زیر را انتخاب یا مبلغ دلخواه خود را وارد نمایید و سپس مبلغ نهایی را پرداخت نمایید و اعتبار کیف پول خود را افزایش دهید ."
                android:textSize="18dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/etCurrencyInsertCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:textSize="18dp"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearIncreseCredite"
        android:layout_below="@+id/LinearMinCredit"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnTwoThousand"
            android:background="@drawable/rounded_textview_currency2"
            android:text="20
هزار تومان"
            android:textColor="#ffff"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnFiftyThousand"
            android:background="@drawable/rounded_textview_currency1"
            android:text="50
هزار تومان"
            android:textColor="#6a33d7"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnOneHundredThousand"
            android:background="@drawable/rounded_textview_currency1"
            android:text="100
هزار تومان"
            android:textColor="#6a33d7"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/LinearMinCredit"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/etInsertPriceUser"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:background="@drawable/rounded_textview_currency1"/>
        <TextView
            android:id="@+id/tvHistoryCredits"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="تومان"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_alignTop="@+id/etInsertPriceUser"
            android:layout_alignBottom="@+id/etInsertPriceUser"
            android:layout_alignLeft="@+id/etInsertPriceUser"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"
                android:text="@string/cash"
                android:textColor="#fff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:id="@+id/btnIncreseCredit"
                android:background="@drawable/rounded_button_add_address"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
